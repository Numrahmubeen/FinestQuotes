<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/quote_rl"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screenShot_cl"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_45sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quote_iv"
                android:src="@drawable/ic_quote"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_alignParentTop="true" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/quote_tv"
                            android:scrollbars="vertical"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_30ssp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:text="dfmdfnm vhjdfgdhbvbhb
                            nbjh bhjbhbhjbjhj jh h h h h  h hhjhjbhj hj hjbhj h
                            ghhjhjhjbjhjbhjbjh
                            hbhjhvhbvbfh vhbfbv jhbhjv hjfv
                            bv
                            bhbh
                            jhgfb vhjdhbvbfhbhjbjhbhvbhjbfjhbvhjfbvhbjhfvjhbvjhbfhjvbfjhjbfb"
                            android:gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quote_author_tv"
                android:text="author Name"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/quote_pb"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:paddingTop="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        android:weightSum="4"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/widgets"
            android:id="@+id/rvItem_whatsapp_tv"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableLeft="@drawable/ic_whatsapp"
            android:text="Whatsapp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/widgets"
            android:drawablePadding="@dimen/_4sdp"
            android:id="@+id/rvItem_save_tv"
            android:drawableLeft="@drawable/ic_download"
            android:text="Save" />
        <TextView
            android:id="@+id/rvItem_copy_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableLeft="@drawable/ic_baseline_content_copy_24"
            android:text="Copy" />

        <TextView
            android:id="@+id/rvItem_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="@dimen/_4sdp"
            android:text="Share" />
    </LinearLayout>

</RelativeLayout>


